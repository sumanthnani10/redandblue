<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
  <!-- Font Awesome icons (free version)-->
  <script src="https://use.fontawesome.com/releases/v6.4.2/js/all.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
  <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
  <!-- Core theme CSS (includes Bootstrap)-->
  <link href="css/styles.css" rel="stylesheet" />
  <title>Home - Red & Blue Appliances Service</title>
</head>

<body id="page-top">
  <!-- Navigation-->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="assets/img/navbar-logo.png" alt="Red & Blue Appliances Service" /></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars ms-1"></i>
      </button>
      <div class="logo-text" style="color: white;">Red & Blue Appliances Service</div>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav text-uppercase ms-auto py-1 py-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li><li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="/services" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Services</a>
            <div class="dropdown-menu bg-red" aria-labelledby="servicesDropdown">
              <% services = [
              [ 'refrigerator', 'Refrigerator' ],
              [ 'hood', 'Hood' ],
              [ 'dishwasher', 'Dishwasher' ],
              [ 'stoves', 'Stoves' ],
              [ 'microwave', 'Microwave' ],
              [ 'ice_machine', 'Ice Machine' ],
              [ 'washer_dryer', 'Washer & Dryer' ],
              [ 'wall_oven', 'Wall Oven' ]
            ] %>
              <% services.forEach((service) => { %>
                <a class="dropdown-item text-white" href="/services/<%= service[0]%>"><%= service[1]%></a>
              <%})%>
            </div>
          </li>
          <li class="nav-item"><a class="nav-link" href="/aboutus">About Us</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Masthead-->
  <header class="masthead">
    <div class="container">
      <div class="masthead-subheading">Your go-to for professional appliances service.</div>
      <div class="masthead-heading">SAME-DAY SERVICE</div>
    </div>
  </header>

  <!-- Services-->
  <section class="page-section" style="margin: 2rem 0;" id="services">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">Services</h2>
        <h3 class="section-subheading text-muted">Fixing Appliances, Restoring Convenience</h3>
      </div>
      <div class="row">

        <div class="col-md-2 text-center">
          <div class="stacked-icon">
            <img src="assets/icons/refrigerator.svg" alt="Fridge">
          </div>
          <h4 class="my-3">Refrigerator</h4>
        </div>

        <div class="col-md-2 text-center">
          <div class="stacked-icon">
            <img src="assets/icons/oven.svg" alt="Fridge">
          </div>
          <h4 class="my-3">Oven</h4>
        </div>

        <div class="col-md-2 text-center">
          <div class="stacked-icon">
            <img src="assets/icons/cooktop.svg" alt="Fridge">
          </div>
          <h4 class="my-3">Stoves</h4>
        </div>

        <div class="col-md-2 text-center">
          <div class="stacked-icon">
            <img src="assets/icons/washer.svg" alt="Fridge">
          </div>
          <h4 class="my-3">Washing Machine</h4>
        </div>

        <div class="col-md-2 text-center">
          <div class="stacked-icon">
            <img src="assets/icons/chimney.svg" alt="Fridge">
          </div>
          <h4 class="my-3">Hood</h4>
        </div>

        <div class="col-md-2 text-center">
          <div class="stacked-icon">
            <img src="assets/icons/microwave.svg" alt="Fridge">
          </div>
          <h4 class="my-3">Microwave</h4>
        </div>

      </div>
      <h3 class="section-heading text-center text-red" style="padding-top: 3rem;"><b>& More</b></h3>
    </div>
  </section>

  <!-- Brands Grid-->
  <section class="page-section bg-light" id="brands">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">Our Trusted Partners</h2>
        <h3 class="section-subheading text-muted">Joining Hands with Excellence</h3>
      </div>
      <div class="row">
        <% brands = [["Whirlpool", "whirlpool.png"], ["GE Appliances", "GE.png"], ["Samsung", "samsung.png"], ["Bosch", "bosch.png"], ["LG Electronics", "LG.png"], ["Viking Range", "viking.png"]] %>
        <% brands.forEach((brand) => { %>
        <div class="col-lg-4 col-sm-6 mb-4">
          <div class="portfolio-item">
            <a class="portfolio-link">
              <div class="portfolio-hover">
                <div class="portfolio-hover-content"><%=brand[0]%></div>
              </div>
              <img class="portfolio-img" src=<%= "assets/img/brands/"+brand[1] %> alt=<%= brand[1] %> />
            </a>
            <div class="portfolio-caption">
              <div class="portfolio-caption-heading"><%=brand[0]%></div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <!-- Reviews-->
  <section class="page-section" id="reviews">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading text-uppercase">Applause & Appliances</h2>
        <h3 class="section-subheading text-muted">Repair Stories of Delighted Customers</h3>
      </div>
      <div class="row">
        <% reviews = [["Parveen Anand", "Washing Machine", "I'm a busy professional, and my washing machine breaking down was a nightmare. Your quick response and professional repair service got me back on track. Thanks for saving my work shirts!", "1"], ["Emily Chen", "Microwave", "As a student living away from home, my microwave is a lifeline. Your repair service was a lifesaver, and I'm grateful for your expertise. Keep up the great work!", "2"], ["Maria Rodriguez", "Dryer", "I'm a working mom of three, and a broken dryer was a disaster. Your technicians fixed it quickly, and my laundry routine is back on track. I can't thank you enough!", "3"]] %>
        <% reviews.forEach((review) => { %>
        
        <div class="col-lg-4">
          <div class="team-member">
            <img class="mx-auto rounded-circle" src=<%= `assets/img/reviews/${review[3]}.jpg` %> alt==<%= `${review[3]}.jpg` %> />
            <h4><%= review[0] %></h4>
            <p class="text-muted"><%= review[1] %></p>
            <%= review[2] %>
          </div>
        </div>
      <%})%>
    </div>
  </section>

  <!-- Footer-->
  <footer class="footer py-4 bg-light">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-4 text-lg-start">Copyright &copy; Red & Blue Appliances Service LLC 2023</div>
        <div class="col-lg-4 my-3 my-lg-0">
          <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
          <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
          <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <div class="col-lg-4 text-lg-end">
          <a class="link-dark text-decoration-none me-3" href="#!">Privacy Policy</a>
          <a class="link-dark text-decoration-none" href="#!">Terms of Use</a>
        </div>
      </div>
      <div class="text-center text-blue" style="padding-top: 2rem; font-weight: 900;">RED AND BLUE APPLIANCES SERVICE LLC</div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/scripts.js"></script>
  <div class="sticky-button fa-fade">
    <i class="fa-solid fa-truck fa-lg" style="color: #ffffff; padding-right: 8px; padding-left: 8px;"></i>
    <a href="/contact">Request a Service</a>
  </div>
</body>

</html>